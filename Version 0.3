procedimento SEARCHMETALC
inicio
   cont<-0 //Contagem inicia com 0
   repita
      //Pedir elemento para que seja buscado no "banco de dados"
      escreval ("Digite o nome do elemento que está buscando")
      //salvar em variavel para pesquisa
      leia (search_name)
      repita
         //Iniciar contagem
         cont<-cont+1
         //Para contagem quando nome de buscar igual ao do banco de dados
      ate (search_name = met_alcalin[cont].nome) ou (cont > 5)
      // Se contagem maior que 6 então elemento não encontrado
      se (cont > 5) então
         limpatela
         escreval ("Não foi possivel encontrar elemento que você procura")
      senão
         //Senão, contagem identifica o elemento
      fimse
      limpatela
      //apresentar dados sobre o elemento atráves da contagem
      escreval ("Elemento encontrado!")
      escreval ("=======================================================")
      escreval ("Nome do Elemento :",met_alcalin[cont].nome)
      escreval ("Simbolo do Elemento: [",met_alcalin[cont].simbol,"]")
      escreval ("Numero Atômico: ",met_alcalin[cont].num_atm)
      escreval ("Massa Atômica: ",met_alcalin[cont].mass_atm)
      escreval ("Periodo Na Tabela Periodica: ",met_alcalin[cont].periodo)
      CURIOSITY
      leia (comand)
      limpatela

